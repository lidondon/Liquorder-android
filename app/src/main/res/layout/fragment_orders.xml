<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/parentToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/item_padding"
                    android:paddingEnd="@dimen/item_padding"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_half_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="@dimen/filter_text"
                        android:text="@string/start_date"/>
                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_marginEnd="16dp"
                        android:textSize="@dimen/filter_text"/>
                    <ImageView
                        android:id="@+id/ivStartDate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/item_padding"
                    android:paddingEnd="@dimen/item_padding"
                    android:paddingTop="@dimen/item_half_padding"
                    android:paddingBottom="@dimen/item_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llStart"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/item_text"
                        android:textColor="@color/colorPrimaryLight"
                        android:text="@string/end_date"/>
                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryLight"
                        android:layout_marginEnd="16dp"
                        android:textSize="@dimen/item_text"/>
                    <ImageView
                        android:id="@+id/ivEndDate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llItems"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/iMenu"
            layout="@layout/fragment_menu"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>